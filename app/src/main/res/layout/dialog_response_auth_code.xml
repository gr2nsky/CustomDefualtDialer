<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F9F9F9">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="#ffffff"
            android:text="인증번호 입력"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:id="@+id/et_auth_code_input"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:hint="인증번호를 입력하세요."
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_auth_code_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="03:00"
                android:textColor="#cc0000"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_err_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="인증번호가 틀렸습니다."
            android:visibility="invisible"
            android:textColor="#ff0000"/>
        <TextView
            android:id="@+id/tv_request_new_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="인증번호 받기"
            android:textStyle="bold"
            android:textColor="#0000ff"/>
        <TextView
            android:id="@+id/tv_auth_code_hint"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textIsSelectable="true"
            android:gravity="center"
            android:text="인증번호"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FDF0F0"
                android:gravity="center"
                android:text="취소"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#F0F1FD"
                android:gravity="center"
                android:text="확인"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>