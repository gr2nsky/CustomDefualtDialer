<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".Activity.PersonDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_rounded_conner_white_bordery"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_person_detail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_person"/>
            <EditText
                android:id="@+id/et_name_person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:enabled="false"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="18"
                android:ellipsize="end"
                android:hint="이름을 입력하세요."
                android:textSize="30dp"
                android:background="#ffffff"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_rounded_conner_white_bordery"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="전화번호"
                android:textSize="12dp"
                android:textColor="#939393"/>
            <EditText
                android:id="@+id/et_phone_person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ffffff"
                android:enabled="false"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"
                android:hint="전화번호를 입력하세요."
                android:textSize="15dp"
                android:textColor="#000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="이메일"
                android:textSize="12dp"
                android:textColor="#939393"/>
            <EditText
                android:id="@+id/et_email_person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ffffff"
                android:enabled="false"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"
                android:hint="이메일을 입력하세요."
                android:textSize="15dp"
                android:textColor="#000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="지역"
                android:textSize="12dp"
                android:textColor="#939393"/>
            <EditText
                android:id="@+id/et_residence_person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ffffff"
                android:enabled="false"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"
                android:hint="지역을 입력하세요."
                android:textSize="15dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="메모"
                android:textSize="12dp"
                android:textColor="#939393"/>
            <EditText
                android:id="@+id/et_memo_person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ffffff"
                android:enabled="false"
                android:scrollHorizontally="true"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:maxLength="200"
                android:maxLines="5"
                android:hint="메모를 입력하세요."
                android:textSize="15dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/background_rounded_conner_light_gary">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:id="@+id/ll_negative_person_detail"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_negative_person_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_delete"/>
                <TextView
                    android:id="@+id/tv_negative_person_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="삭제"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#898989"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:id="@+id/ll_positive_person_detail"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_positive_person_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_pen"/>
                <TextView
                    android:id="@+id/tv_positive_person_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="수정"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>